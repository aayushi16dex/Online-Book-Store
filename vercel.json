{
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],

      "builds": [
        {
          "src": "package.json",
          "use": "@vercel/static-build",
          "config": {
            "chmod": "+x node_modules/.bin/*",
            "maxDuration": 60,
            "cmd": "npm install --unsafe-perm && npm run build"
          },
          "env": {
            "NPM_CONFIG_PREFIX": "~/.npm-global"
          }
        }
      ]
}
  